// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==============================
// 1. STORE & PRODUCTS
// ==============================

model Product {
  id          String      @id @default(uuid())
  name        String
  series      String      // e.g. "HydroPro"
  description String      @db.Text
  basePrice   Int
  stock       Int         @default(0)
  capacity    String?
  sales       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  features    Feature[]
  images      Image[]
  variants    Variant[]
  // Relation to OrderItems (Optional: strictly needed if you want DB-level integrity for line items)
  // For the Json based order system below, this is optional, but good to keep.
  orderItems  OrderItem[] 
}

model Variant {
  id        String  @id @default(uuid())
  name      String  // e.g. "Matte Black"
  capacity  String? // e.g. "500ml"
  stock     Int     @default(0)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Image {
  id        String  @id @default(uuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Feature {
  id        String  @id @default(uuid())
  text      String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// ==============================
// 2. USERS & AUTH (Merged)
// ==============================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Added for manual/guest accounts
  role          String    @default("CUSTOMER") // "ADMIN" or "CUSTOMER"
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // Relations to Commerce
  orders        Order[]
  addresses     Address[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==============================
// 3. CHECKOUT, ORDERS & COUPONS
// ==============================

model Address {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // "BILLING" or "SHIPPING"
  street      String
  city        String
  state       String
  pincode     String
  country     String   @default("India")
}

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Int      // Percentage (e.g. 10 for 10%)
  maxAmount   Int?     // Max discount in Rupees
  expiryDate  DateTime
  isActive    Boolean  @default(true)
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // We store the cart snapshot as JSON to preserve exact price/state at time of purchase
  items           Json     
  
  totalAmount     Float
  taxAmount       Float
  shippingAmount  Float
  discountAmount  Float
  finalAmount     Float
  
  status          String   @default("PENDING") // PENDING, PAID, SHIPPED
  paymentId       String?  // Razorpay Payment ID
  
  createdAt       DateTime @default(now())

  // Optional: keep this if you want to perform analytics on individual products later
  orderItems      OrderItem[] 
}

// Optional: Link table if you want strict SQL relations instead of JSON
model OrderItem {
  id          String  @id @default(uuid())
  orderId     String
  productId   String
  quantity    Int
  price       Int     
  variantName String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}